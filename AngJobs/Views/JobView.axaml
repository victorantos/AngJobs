<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AngJobs.ViewModels"
             xmlns:local="clr-namespace:AngJobs.Helpers"
             xmlns:helpers="clr-namespace:Angjobs.Helpers"
             x:DataType="vm:JobViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AngJobs.Views.JobView"
              >
    <Border Background="WhiteSmoke" BorderThickness="1" BorderBrush="LightGray" CornerRadius="5" Padding="10" Margin="0 0 0 5">
        <TextBlock Text="{Binding Title}" TextWrapping="Wrap" HorizontalAlignment="Center" 
                   MaxLines="2" FontWeight="Bold" FontSize="16" 
                   FontFamily="Segoe UI"
                   helpers:PointerEvents.PointerEnterCommand="{Binding OnMouseEnter}" 
                   helpers:PointerEvents.PointerLeaveCommand="{Binding OnMouseLeave}">
                   >
             
        </TextBlock>
    </Border>

